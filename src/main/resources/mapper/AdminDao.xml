<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kp.dao.AdminDao">
    <resultMap id="adminMap" type="admin">
        <id property="adminId" column="admin_id"/>
        <result property="adminLoginName" column="admin_login_name"/>
        <result property="adminLoginPwd" column="admin_login_pwd"/>
        <result property="adminLoginDate" column="admin_login_date"/>
    </resultMap>

    <select id="findAll" resultMap="adminMap" resultType="admin" parameterType="admin">
        select * from admin
        where 1= 1
        <if test="adminLoginName != null">
            and admin_login_name like concat('%',#{adminLoginName},'%')
        </if>
    </select>


    <select id="findAdminCount" resultType="int" >
        select count(*)
        from admin
    </select>

    <insert id="addAdmin" parameterType="admin">
        insert into admin
        (admin_login_name,admin_login_pwd)
        values (#{adminLoginName},#{adminLoginPwd})
    </insert>

    <!-- 删除管理员-->
    <delete id="deleteAdmin" parameterType="int">
        delete from admin
        where admin_id = #{adminId}
    </delete>


    <!-- 登陆-->
    <select id="loginAdmin" resultMap="adminMap" resultType="admin" parameterType="admin">
        select * from admin
        where  admin_login_name = #{adminLoginName} and admin_login_pwd = #{adminLoginPwd}
    </select>


    <update id="updateLoginTime" parameterType="admin" >
        update admin
        set  admin_login_date =  #{adminLoginDate}
        where admin_id = #{adminId}
    </update>

</mapper>